-- Close Button
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -35, 0, 5)
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
CloseButton.BorderSizePixel = 0
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.TextSize = 18
CloseButton.Font = Enum.Font.GothamBold
CloseButton.Parent = MainFrame

local CloseCorner = Instance.new("UICorner")
CloseCorner.CornerRadius = UDim.new(0, 6)
CloseCorner.Parent = CloseButton

-- Variables
local isEnabled = false
local cashFarmed = 0
local farmLoop = nil

-- Configuration
local config = {
    PlayerTeam = "Civillian",
    ForText = "TAMBAY",
    Signature = "Billionaire City Goverment",
    Paycheck = 100000,
    RawValue = "One Hundred Cash",
    Bank = "Bank of The Billionaire City"
}

-- Function to find and fire payment remote
local function triggerPayment()
    local possibleNames = {
        "PaycheckEvent",
        "ClaimPaycheck",
        "GetPay",
        "ReceiveMoney",
        "ProcessPayment",
        "PayEvent"
    }
    
    for _, name in ipairs(possibleNames) do
        local remote = ReplicatedStorage:FindFirstChild(name)
        if remote and remote:IsA("RemoteEvent") then
            pcall(function()
                remote:FireServer(config)
            end)
            return true
        end
    end
    
    for _, child in ipairs(ReplicatedStorage:GetDescendants()) do
        if child:IsA("RemoteEvent") then
            pcall(function()
                child:FireServer(config)
            end)
        end
    end
    
    return false
end

-- Update cash counter
local function updateCashCounter()
    cashFarmed = cashFarmed + config.Paycheck
    CashLabel.Text = "Cash Farmed: $" .. tostring(cashFarmed)
end

-- Toggle function
local function toggleFarm()
    isEnabled = not isEnabled
    
    if isEnabled then
        ToggleButton.Text = "ON"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 255, 50)
        StatusLabel.Text = "Status: Farming..."
        
        -- Start farm loop
        farmLoop = task.spawn(function()
            while isEnabled do
                triggerPayment()
                updateCashCounter()
                task.wait(0.1) -- Farm every 0.1 seconds
            end
        end)
    else
        ToggleButton.Text = "OFF"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
        StatusLabel.Text = "Status: Idle"
        
        -- Stop farm loop
        if farmLoop then
            task.cancel(farmLoop)
            farmLoop = nil
        end
    end
end

-- Button connections
ToggleButton.MouseButton1Click:Connect(toggleFarm)

CloseButton.MouseButton1Click:Connect(function()
    isEnabled = false
    if farmLoop then
        task.cancel(farmLoop)
    end
    ScreenGui:Destroy()
end)

-- Notification
StatusLabel.Text = "Status: Ready!"
task.wait(2)
if StatusLabel then
    StatusLabel.Text = "Status: Idle"
end
